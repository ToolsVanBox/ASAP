process {
    withName: 'HMFTOOLS_AMBER_SOMATIC' {
        ext.args = '-ref_genome_version 38'
        publishDir       = [
            [
                path: { "${params.out_dir}/sv/somatic/gridss/${meta.id}/amber" },
                mode: "copy",
                pattern: "*"
            ]
        ]
    }
    withName: 'HMFTOOLS_AMBER_TUMORONLY' {
        ext.args = '-ref_genome_version 38'
        publishDir       = [
            [
                path: { "${params.out_dir}/sv/tumoronly/gridss/${meta.id}/amber" },
                mode: "copy",
                pattern: "*"
            ]
        ]
    }
    withName: 'HMFTOOLS_AMBER_GERMLINE' {
        ext.args = '-ref_genome_version 38'
        publishDir       = [
            [
                path: { "${params.out_dir}/sv/germline/gridss/${meta.id}/amber" },
                mode: "copy",
                pattern: "*"
            ]
        ]
    }
}
        
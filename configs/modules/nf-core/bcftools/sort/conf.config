process {
    withName: 'BCFTOOLS_SORT' {
        ext.args         = ''
        ext.prefix       = { "${meta.id}.sorted" }
        publishDir       = [
            //specify to avoid publishing, overwritten otherwise
            enabled: false
        ]                     
    }
    withName: 'BCFTOOLS_SMURF_.*' {
        publishDir       = [
            //specify to avoid publishing, overwritten otherwise
            path: { "${params.out_dir}/vcf/germline/somatic_filtering/SMuRF/" },
            mode: "copy",
            pattern: "*.vcf.gz"
        ]                     
    }
}
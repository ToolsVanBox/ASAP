includeConfig "${projectDir}/configs/nextflow.config"
includeConfig "${projectDir}/configs/process.config"
includeConfig "${projectDir}/configs/resources.config"

params {
    config_profile_name        = 'Test profile'
    run_id = "demo"
    input = "/hpc/pmc_vanboxtel/tools/ToolsVanBox_DEV/ASAP/demo/samplesheet_fastq.csv"
    out_dir = "./"
    genome = 'GRCh38'

    run {
        // QC
        fastq_qc_pre_mapping = true
        bam_qc_post_mapping = true
        bam_fingerprint = true
        
        // Mapping
        fastq_align = true
        bam_markduplicates = true
        
        // Short variant discovery
        bam_germline_short_variant_discovery = true
        vcf_variant_filtration = true
        vcf_variant_annotation = true

        // Copy number discovery
        bam_germline_copy_number_discovery = true
        
        // Structural variant discovery
        bam_germline_structural_variant_discovery = true
        bam_somatic_structural_variant_discovery = true
        bam_tumoronly_structural_variant_discovery = true
        
    }
}
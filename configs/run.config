includeConfig "${projectDir}/configs/nextflow.config"
includeConfig "${projectDir}/configs/process.config"
includeConfig "${projectDir}/configs/resources.config"
includeConfig "${projectDir}/configs/base.config"
includeConfig "${projectDir}/configs/tools.config"
includeConfig "${projectDir}/configs/settings.config"


params {
    config_profile_name        = 'Test profile'
    run_id = "demo"
    input = "/hpc/pmc_vanboxtel/tools/ToolsVanBox_DEV/ASAP/demo_v1/input/samplesheet.csv"
    out_dir = "./"
    genome = 'GRCh38'

    run {
        // QC
        fastq_qc_pre_mapping = false
        bam_qc_post_mapping = true
        bam_fingerprint = true
        
        // Mapping
        fastq_align = false
        bam_markduplicates = false

        // Telomeres
        bam_telomeres = true
        
        // Short variant discovery
        bam_germline_short_variant_discovery = true
        bam_somatic_short_variant_discovery = false
	
        // Variant filtration and annotation
        vcf_variant_filtration = true
        vcf_variant_annotation = true
	    vcf_somatic_filtration = true

        // Copy number discovery
        bam_germline_copy_number_discovery = true
        bam_somatic_copy_number_discovery = false
        bam_tumoronly_copy_number_discovery = false
        
        // Structural variant discovery
        bam_germline_structural_variant_discovery = true
        bam_somatic_structural_variant_discovery = false
        bam_tumoronly_structural_variant_discovery = false

        vcf_germline_structural_variant_filtration = true
        vcf_somatic_structural_variant_filtration = true
        vcf_tumoronly_structural_variant_filtration = false
        
    }
}